{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"templateParts": [
		{
			"name": "header",
			"area": "header"
		},
		{
			"name": "header-centered",
			"area": "header"
		},
			{
			"name": "header-two-menu-centered",
			"area": "header"
		},
		{
			"name": "sidebar",
			"area": "uncategorized"
		},
		{
			"name": "footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "ar-page",
			"title": "Arbic template",
			"postTypes": [
				"page",
				"post"
			]
		}
	],
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "1000px",
			"wideSize": "1200px"
		},
		"color": {
			"link": true,
			"defaultPalette": false,
			"palette": [
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#007cba"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#006ba1"
				},
				{
					"name": "Foreground",
					"slug": "foreground",
					"color": "#333333"
				},
				{
					"name": "Background",
					"slug": "background",
					"color": "#ffffff"
				},
				{
					"name": "Tertiary",
					"slug": "tertiary",
					"color": "#F0F0F0"
				},
				{
					"name": "Complementary",
					"slug": "complementary",
					"color": "#E67E22"
				}
			],
			"gradients": [
				{
					"name": "Sunset",
					"gradient": "linear-gradient(135deg, #ff7e5f 0%, #feb47b 100%)",
					"slug": "sunset"
				},
				{
					"name": "Ocean Blue",
					"gradient": "linear-gradient(135deg, #00c6ff 0%, #0072ff 100%)",
					"slug": "ocean-blue"
				}
			]
		},
		"typography": {
			"lineHeight": true,
			"letterSpacing": true,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"slug": "system-font",
					"name": "System Font"
				},
				{
					"fontFamily": "'Helvetica Neue','Helvetica', 'Arial', sans-serif",
					"slug": "helvetica-neue",
					"name": "Helvetica Neue"
				},
				{
					"fontFamily": "Montserrat, sans-serif",
					"slug": "montserrat",
					"name": "Montserrat",
					"fontFace": [
						{
							"fontFamily": "Montserrat, sans-serif",
							"fontWeight": "400",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/montserrat/Montserrat-Regular.ttf"
							]
						},
						{
							"fontFamily": "Montserrat, sans-serif",
							"fontWeight": "700",
							"fontStyle": "bold",
							"src": [
								"file:./assets/fonts/montserrat/Montserrat-Bold.ttf"
							]
						},
						{
							"fontFamily": "Montserrat, sans-serif",
							"fontWeight": "900",
							"fontStyle": "black",
							"src": [
								"file:./assets/fonts/montserrat/Montserrat-black.ttf"
							]
						}
					]
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "1rem",
					"name": "Small"
				},
				{
					"slug": "medium",
					"size": "1.5rem",
					"name": "Medium"
				},
				{
					"slug": "large",
					"size": "1.75rem",
					"name": "Large"
				},
				{
					"slug": "x-large",
					"size": "2rem",
					"name": "Extra Large"
				}
			]
		},
		"spacing": {
			"padding": true,
			"margin": true,
			"blockGap": true,
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"position": {
			"sticky": true
		}
	},
	"styles": {
		"spacing": {
			"padding": {
				"top": "0",
				"bottom": "0",
				"left": "10px",
				"right": "10"
			}
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": "25px"
				}
			},
			"core/cover": {
				"color": {
					"background": "red",
					"text": "var(--wp--preset--color--background)"
				}
			},
			"core/pullquote": {
				"color": {
					"background": "var(--wp--preset--color--complementary)"
				}
			},
			"core/navigation":{
				  "css": "& a:hover span { color: var(--wp--preset--color--complementary); }"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--montserrat)",
			"lineHeight": "1.6",
			"fontSize": "var(--wp--preset--font-size--small)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--montserrat)",
					"fontWeight": "black",
					"fontSize": "clamp(1rem, -1.8125rem + 9vw, 3.25rem)"
				},
				"color": {
					"text": "var(--wp--preset--color--complementary)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "clamp(0.8rem, -0.7rem + 4.8vw, 2rem)"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"button": {
				"color": {
					"text": "var(--wp--preset--color--primary)",
					"background": "var(--wp--preset--color--background)"
				},
				"border": {
					"radius": "25px",
					"width": "2px",
					"style": "solid",
					"color": "var(--wp--preset--color--primary)"
				},
				"spacing": {
					"padding": {
						"top": "0.5rem",
						"bottom": "0.5rem",
						"left": "1.5rem",
						"right": "1.5rem"
					}
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			}
		}
	}
}